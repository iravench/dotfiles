" rspec command shortcut
let g:rspec_command = "!rspec --no-drb --color --format documentation {spec}"
"nnoremap <leader>s :call RunCurrentSpecFile()<CR>
nnoremap <leader>ts :call RunNearestSpec()<CR>

" allow the . to execute once for each line of a visual selection
vnoremap . :normal .<CR>

" make ~ execute the contents of the a register
nnoremap ~ @a
vnoremap ~ :normal @a<CR>

" respect local .vimrc config
" set exrc

" set gui font for MacVim
set gfn=Monaco:h13
